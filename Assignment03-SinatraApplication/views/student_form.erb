<label for="sfname">First Name:</label>
<input id="sfname" name="student[sfname]" type="text" value="<%= ::Temple::Utils.escape_html((@student.sfname)) %>" />
<label for="slname">Last Name:</label>
<input id="slname" name="student[slname]" type="text" value="<%= ::Temple::Utils.escape_html((@student.slname)) %>" />
<label for="major">Major:</label>
<select name="student[major]" id="major">
  <option value="Chemistry">Chemistry</option>
  <option value="Computer Science">Computer Science</option>
  <option value="Electronics">Electronics</option>
  <option value="Law">Law</option>
  <option value="Mathematics">Mathematics</option>
  <option value="Physics">Physics</option>
  <option value="Psychology">Psychology</option>
  <option value="Social Science">Social Science</option>
</select>
<label for="gpa">Students GPA:</label>
<input id="gpa" name="student[gpa]" step="any" type="number" min="1" max="4" value="<%= ::Temple::Utils.escape_html((@student.gpa)) %>" />
<input type="submit" value="Save Student" />
